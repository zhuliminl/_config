      "data": "<div><br></div><div><img src=\"quiver-image-url/13736040DE8D90E8F4C61EDFA6F55FCB.jpg\" width=\"667\" height=\"314\"><br></div><div><br></div><div><br></div><div><pre style=\"background-color:#2b2b2b;color:#a9b7c6;font-family:'Menlo';font-size:10.5pt;\"><span style=\"color:#bbb529;\">#include </span><span style=\"color:#6a8759;\">&lt;iostream&gt;<br></span><span style=\"color:#bbb529;\">#include </span><span style=\"color:#6a8759;\">&lt;string&gt;<br></span><span style=\"color:#6a8759;\"><br></span><span style=\"color:#cc7832;\">using namespace </span><span style=\"color:#b5b6e3;\">std</span><span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\"><br></span><span style=\"color:#cc7832;\"><br></span><span style=\"color:#cc7832;\">int </span><span style=\"color:#ffc66d;\">main</span>(<span style=\"color:#cc7832;\">void</span>)<br>{<br>    <span style=\"color:#cc7832;\">static const int </span>size = <span style=\"color:#6897bb;\">10</span><span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\"><br></span><span style=\"color:#cc7832;\">    int </span>example[size]<span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\">    </span>example[<span style=\"color:#6897bb;\">0</span>] = <span style=\"color:#6897bb;\">10</span><span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\">    int </span>foo = example[<span style=\"color:#6897bb;\">0</span>]<span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\"><br></span><span style=\"color:#cc7832;\">    int </span>count = <span style=\"color:#cc7832;\">sizeof</span>(example) / <span style=\"color:#cc7832;\">sizeof</span>(<span style=\"color:#cc7832;\">int</span>)<span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\">    </span>cout <span style=\"color:#5f8c8a;\">&lt;&lt; </span>count <span style=\"color:#5f8c8a;\">&lt;&lt; </span>endl<span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\">    for</span>(<span style=\"color:#cc7832;\">int </span>i = <span style=\"color:#6897bb;\">0</span><span style=\"color:#cc7832;\">; </span>i&lt;count<span style=\"color:#cc7832;\">; </span>i++) {<br>        example[i] = <span style=\"color:#6897bb;\">5</span><span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\">    </span>}<br><br><br>    cout <span style=\"color:#5f8c8a;\">&lt;&lt; </span>example <span style=\"color:#5f8c8a;\">&lt;&lt; </span>endl<span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\"><br></span><span style=\"color:#cc7832;\">    int</span>* ptr = example<span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\">    </span>cout <span style=\"color:#5f8c8a;\">&lt;&lt; </span>ptr <span style=\"color:#5f8c8a;\">&lt;&lt; </span>endl<span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\">    </span>*(ptr + <span style=\"color:#6897bb;\">2</span>) = <span style=\"color:#6897bb;\">9</span><span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\">    </span>cout <span style=\"color:#5f8c8a;\">&lt;&lt; </span>*(ptr + <span style=\"color:#6897bb;\">2</span>) <span style=\"color:#5f8c8a;\">&lt;&lt; </span>endl<span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\">    </span>cout <span style=\"color:#5f8c8a;\">&lt;&lt; </span>ptr + <span style=\"color:#6897bb;\">4 </span><span style=\"color:#5f8c8a;\">&lt;&lt; </span>endl<span style=\"color:#cc7832;\">;<br></span><span style=\"color:#cc7832;\"><br></span>}<br></pre><pre style=\"background-color:#2b2b2b;color:#a9b7c6;font-family:'Menlo';font-size:10.5pt;\"><br></pre></div>"
